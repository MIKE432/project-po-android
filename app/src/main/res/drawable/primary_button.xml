<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:color="@color/text_green">
        <shape>
            <stroke android:color="@color/black" android:width="1dp"/>
            <solid android:color="@color/primary_900" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_active="false" android:color="@color/primary_900">
        <shape>
            <stroke android:color="@color/primary_900" android:width="1dp"/>
            <solid android:color="@color/text_green" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
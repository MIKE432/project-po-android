<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:color="@color/white">
        <shape>
            <stroke android:color="@color/black" android:width="1dp"/>
            <solid android:color="@color/error_background_color" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_active="false" android:color="@color/error_background_color">
        <shape>
            <stroke android:color="@color/error_background_color" android:width="1dp"/>
            <solid android:color="@color/white" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>